<h1>All Wikis</h1>

<div class="row">
  <div class="col-md-8">
    <% @wikis.each do |wiki| %>
      <div class ="media">
        <div class ="media-body">
          <h4 class="media-heading">
            <%= link_to (markdown wiki.title), wiki %>
          </h4>
          <small>
            <%= wiki.body %>
          </small>
        </div>
      </div>
    <% end %>

  </div>

  <div class="col-md-4">
    <% if policy(Wiki.new).create? %>
      <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
    <% end %>
   
    <% if current_user %>
      <% if current_user.role == "standard" %>
        <%= link_to "Upgrade Account", new_charge_path, class: 'btn btn-primary' %>
      <% end %> 
    <% end %>
  </div>
</div>